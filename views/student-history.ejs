<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student History</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #fff;
            color: #333;
            margin: 0;
            padding: 0;
        }
        .container {
            width: 80%;
            margin: 0 auto;
            padding: 20px;
        }
        .question-answer {
            border: 1px solid #ffa500;
            border-radius: 5px;
            margin-bottom: 20px;
            padding: 15px;
            background-color: #fff8e1;
        }
        .question {
            font-weight: bold;
            color: #ff4500;
            background-color: #ffe4c4;
            padding: 10px;
            border-bottom: 1px solid #ffa500;
        }
        .answer {
            margin-top: 10px;
            background-color: #f0fff0;
            padding: 10px;
            border-top: 1px solid #ffa500;
        }
        .answer img, .question img {
            max-width: 100%;
            height: auto;
            display: block;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Your History</h1>
        <% questionAnswerData.forEach(data => { %>
            <div class="question-answer">
                <div class="question">
                    <%= data.question.questionText %>
                    <% if (data.question.questionImage) { %>
                        <img src="/uploads/<%= data.question.questionImage %>" alt="Question Image">
                    <% } %>
                </div>
                <div class="answer">
                    <p><%= data.answer.answerIntro %></p>
                    <% data.answer.answerImages.forEach(image => { %>
                        <img src="/uploads/<%= image %>" alt="Answer Image">
                    <% }) %>
                    <p><%= data.answer.answerConclusion %></p>
                </div>
            </div>
        <% }) %>
    </div>
</body>
</html>